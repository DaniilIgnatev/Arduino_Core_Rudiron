{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Собрать",
            "command": "cmake --build .",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            }
        },
        {
            "type": "shell",
            "label": "Очистить и собрать",
            "command": "cmake --build . --clean-first",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            }
        },
        {
            "type": "shell",
            "label": "Прошить через UART",
            "command": "Rudiron Programmer",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "bootloader_1986be92qi.hex",
                "build/Arduino_Core_Rudiron.hex",
                // "--erase",
                "--load",
                "--run",
                "--verify_bootloader",
                "--speed",
                "16",
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}